<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.gmail.mariska.martin.mtginventory.MtgInventoryApplication</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<listener>
		<listener-class>com.gmail.mariska.martin.mtginventory.LoggerManager</listener-class>
	</listener>
	<listener>
		<listener-class>com.gmail.mariska.martin.mtginventory.EventBusManager</listener-class>
	</listener>
	<listener>
		<listener-class>com.gmail.mariska.martin.mtginventory.DatabaseManager</listener-class>
	</listener>
	<listener>
		<listener-class>com.gmail.mariska.martin.mtginventory.ScheduleManager</listener-class>
	</listener>
	<listener>
		<listener-class>com.gmail.mariska.martin.mtginventory.SupportServiciesManager</listener-class>
	</listener>


	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/v1.0/*</url-pattern>
	</servlet-mapping>
</web-app> 